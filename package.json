{
  "name": "nooter-app",
  "version": "1.0.0",
  "description": "Full-stack notes application",
  "type": "module",
  "scripts": {
    "build": "npm install --prefix backend && npm install --prefix frontend && npm run build --prefix frontend",
    "start": "node backend/src/server.js",
    "start:prod": "cross-env NODE_ENV=production npm start",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "prod": "npm run build:prod && npm run start:prod",
    "dev": "concurrently \"npm run dev --prefix backend\" \"npm run dev --prefix frontend\"",
    "dev:backend": "npm run dev --prefix backend",
    "dev:frontend": "npm run dev --prefix frontend",
    "install-all": "npm install --prefix backend && npm install --prefix frontend",
    "clean": "rm -rf backend/node_modules frontend/node_modules frontend/dist"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.0",
    "mongoose": "^8.18.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
